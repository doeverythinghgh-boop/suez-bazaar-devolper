/*
  @file css/index-page.css
  @description يحتوي على الأنماط الخاصة بالصفحة الرئيسية (index.html).
  - قسم الفئات.
  - معرض المنتجات.
*/

/* === 1. قسم الفئات === */
.categories-section {
  padding: 0px 0 40px 0;
  background-color: var(--bg-color-light);
  text-align: center;
}

.categories-title {
  font-family: var(--font-primary);
  font-size: clamp(24px, 5vw, 32px);
  color: var(--text-color-dark);
  margin-top: 0;
  margin-bottom: 30px;
  font-weight: 700;
}

.categories-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 15px;
  margin-top: 0px;
  table-layout: fixed;
}

@keyframes fadeInRow {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.main-category-row {
  animation: fadeInRow 0.5s ease-out forwards;
  opacity: 0;
}

.categories-table td {
  border: 1px solid var(--border-color);
  padding: 20px;
  text-align: center;
  vertical-align: middle;
  background-color: var(--bg-color-light);
  border-radius: 12px;
  box-shadow: var(--shadow-soft);
  transition: transform 0.3s ease, box-shadow 0.5s ease, opacity 0.3s ease, border-color 0.5s ease;
}

.main-category-row .category-cell.has-subcategories {
  cursor: pointer;
}

.categories-tbody.selection-active .main-category-row .category-cell:not(.active-category) {
  opacity: 0.5;
  transform: none;
  pointer-events: none;
}

.main-category-row .category-cell.active-category {
  border: 1px solid #9bc1eb;
  box-shadow: 0 0 5px 0px rgba(0, 123, 255, 0.25);
  opacity: 1;
}

.main-category-row .category-cell.active-category .category-cell-content i {
  color: var(--primary-color);
}

.main-category-row .category-cell.active-category .category-cell-content span {
  color: var(--text-color-medium);
}

.category-cell-content i {
  font-size: 2rem;
  color: var(--primary-color);
  transition: color 0.3s ease;
}

.category-cell-content span {
  font-size: 0.6rem;
  color: var(--text-color-medium);
  font-weight: 600;
}

.category-cell-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
}

.sub-category-row td {
  padding: 0;
  background-color: transparent;
  border: none;
  box-shadow: none;
}

@keyframes slide-fade-in {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.subcategories-container {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  justify-content: flex-start;
  gap: 15px;
  padding: 20px;
  -webkit-overflow-scrolling: touch;
}

.subcategories-container::-webkit-scrollbar { height: 6px; }
.subcategories-container::-webkit-scrollbar-track { background: transparent; }
.subcategories-container::-webkit-scrollbar-thumb { background-color: #d1d9e6; border-radius: 10px; }

.subcategory-item {
  background-color: var(--bg-color-light);
  border: 1px solid var(--border-color);
  padding: 10px 20px;
  border-radius: 20px;
  text-decoration: none;
  color: var(--primary-color);
  font-weight: 500;
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.5s ease, box-shadow 0.5s ease;
  white-space: nowrap;
  font-size: 0.8em;
}

.subcategory-item:active {
  background-color: var(--primary-color-light);
}

.subcategory-item i {
  font-size: 1.2em;
}

.subcategory-item.active {
  border: 1px solid #9bc1eb;
  box-shadow: 0 0 5px 0px rgba(0, 123, 255, 0.25);
}

.subcategory-item.active i {
  color: var(--primary-color);
}

/* === 2. معرض المنتجات === */
.products-gallery-row td {
  height: 15vh;
  padding: 0px;
  background-color: var(--bg-color-white);
  border-radius: 12px;
  box-shadow: var(--shadow-soft);
  border: 1px solid var(--border-color);
  vertical-align: top;
}

.gallery-container {
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
  gap: 15px;
  white-space: nowrap;
  padding: 15px;
  -webkit-overflow-scrolling: touch;
}

.gallery-container::-webkit-scrollbar { height: 6px; }
.gallery-container::-webkit-scrollbar-track { background: transparent; }
.gallery-container::-webkit-scrollbar-thumb { background-color: #d1d9e6; border-radius: 10px; }

.product-item {
  cursor: pointer;
  text-align: center;
  line-height: 1;
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid #b0b7bc;
  box-shadow: 0px 0px 6px 0px #9eafba;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
  background-color: transparent;
  width: 12vh;
  flex-shrink: 0;
}

.product-item img {
  width: 100%;
  height: 12vh;
  object-fit: cover;
  display: block;
}

.product-name {
  font-family: var(--font-primary);
  font-size: 0.75rem;
  color: var(--text-color-dark);
  padding: 8px 5px;
  margin: 0;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* === 3. قسم الإعلانات (AdverModule) === */
/*
  ملاحظة: تم نقل هذه الأنماط من adverModule.css لتوحيد الملفات.
*/

/* حاوية الشريط الإعلاني الرئيسية */
#advertisement-section {
  position: relative;
  height: 20vh;
  min-height: 150px;
  margin-bottom: 10px;
  overflow: hidden;
  background: linear-gradient(180deg, #fdfdff 0%, #e9ecef 100%);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
  width: auto;
  margin-left: 15px;
  margin-right: 15px;
  border-radius: 12px;
}

/* حاوية الشرائح الداخلية */
.ad-slider-track {
  position: relative;
  transform-style: preserve-3d;
  perspective: 1000px;
  width: 100%;
  height: 100%;
}

/* كل شريحة إعلانية */
.ad-slide {
  position: absolute;
  top: 5%;
  left: 20%;
  width: 60%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 12px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  opacity: 0.8;
  transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1), filter 0.8s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
  filter: blur(3px) brightness(0.7) saturate(0.5);
  cursor: pointer;
}

/* الشريحة النشطة (الظاهرة) */
.ad-slide.active {
  transform: translateX(0) scale(1) !important;
  filter: blur(0) brightness(1) saturate(1);
  opacity: 1;
  z-index: 2;
}

/* حاوية نقاط التنقل */
.ad-slider-dots {
  position: absolute;
  background-color: transparent;
  color: transparent;
  bottom: 5px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 10px;
  z-index: 3;
}

/* كل نقطة تنقل */
.ad-slider-dot {
  width: 5px;
  height: 5px;
  border-radius: 50%;
  background-color: transparent;
  border: 1px solid rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: background-color 0.3s, transform 0.3s;
}

/* النقطة النشطة */
.ad-slider-dot.active {
  background-color: #ffffff;
  transform: scale(1.2);
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
}

/* رسالة عدم وجود إعلانات */
.no-ads-message {
  text-align: center;
  padding: 20px;
  color: #6c757d;
  font-family: "Tajawal", sans-serif;
}

/* أنماط أزرار التنقل (السابق/التالي) */
.ad-slider-nav {
  position: absolute;
  bottom: 2px;
  transform: translateY(-50%);
  z-index: 3;
  background-color: transparent;
  color: #f7f8f9;
  border: none;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  font-size: 18px;
  cursor: pointer;
  display: none; /* مخفية بشكل افتراضي */
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s, transform 0.2s;
}

.ad-slider-nav.prev {
  left: 15px;
}

.ad-slider-nav.next {
  right: 15px;
}

/* تأثير عند الضغط على الأزرار */
.ad-slider-nav:active {
  background-color: rgba(0, 0, 0, 0.5);
  transform: translateY(-50%) scale(0.95);
}